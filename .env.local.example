# Database
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-key

# AI (OpenRouter)
OPENROUTER_API_KEY=your-openrouter-key

# Transcript API
TRANSCRIPT_API_KEY=your-transcriptapi-key

# Supabase Auth
# Enable Email provider in Supabase Auth dashboard.

# YouTube sync
YOUTUBE_API_KEY=your-youtube-data-api-key
YOUTUBE_MIN_DURATION_MINUTES=35
YOUTUBE_LOOKBACK_DAYS=7
YOUTUBE_MAX_RESULTS=5
# If you want to lock the cron endpoint, set a secret and call
# /api/cron/youtube-sync?secret=YOUR_SECRET from your scheduler.
CRON_SECRET=

# Mailchimp (Newsletter ESP)
# Get your API key from: https://mailchimp.com/developer/marketing/guides/quick-start/#generate-your-api-key
# The server prefix is the last part of your API key after the dash (e.g., "us19")
# List ID is your Audience ID from Mailchimp Audience settings
MAILCHIMP_API_KEY=your-api-key-us19
MAILCHIMP_SERVER_PREFIX=us19
MAILCHIMP_LIST_ID=your-audience-id
MAILCHIMP_FROM_NAME=Executive Algorithm
MAILCHIMP_REPLY_TO=hello@yourdomain.com
